<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>IsAvailableForSpeaker</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(AND(
Event__r.End_Date_Time__c &gt; NOW(),
Event__r.Live__c = True
))</errorConditionFormula>
    <errorDisplayField>Speaker__c</errorDisplayField>
    <errorMessage>You cannot add Speakers to closed events.</errorMessage>
</ValidationRule>
